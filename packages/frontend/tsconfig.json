    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
  },
  "include": [
    "src/*/*.ts", 
    "src/**/*.tsx",
  ],
  "references": [
    { "path" : "../common/tsconfig.json" }
  ]
